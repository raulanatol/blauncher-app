{
  "name": "blauncher-app",
  "version": "1.0.0",
  "description": "My Electron application description",
  "keywords": [],
  "license": "MIT",
  "author": {
    "name": "raulanatol",
    "email": "raul@natol.es"
  },
  "main": ".webpack/main",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "make": "electron-forge make",
    "package": "electron-forge package",
    "publish": "electron-forge publish",
    "start": "electron-forge start",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/icon.icns"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "blauncher_app"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/App.tsx",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/config/jest/preprocessor.js"
    }
  },
  "dependencies": {
    "@chakra-ui/core": "^0.8.0",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@jxa/global-type": "^1.3.1",
    "@jxa/run": "^1.3.2",
    "deepmerge": "^4.2.2",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^5.2.0",
    "emotion": "^10.0.27",
    "emotion-theming": "^10.0.27",
    "jxa": "^2.0.3",
    "mobx": "^5.15.4",
    "mobx-react": "^6.2.2",
    "node-fetch": "^2.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons-kit": "^1.3.1",
    "serialport": "^9.0.0",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.51",
    "@electron-forge/maker-deb": "6.0.0-beta.51",
    "@electron-forge/maker-rpm": "6.0.0-beta.51",
    "@electron-forge/maker-squirrel": "6.0.0-beta.51",
    "@electron-forge/maker-zip": "6.0.0-beta.51",
    "@electron-forge/plugin-webpack": "6.0.0-beta.51",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@types/jest": "^25.2.3",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "3.x",
    "@typescript-eslint/parser": "3.x",
    "babel-eslint": "10.x",
    "css-loader": "^3.5.3",
    "electron": "9.0.2",
    "electron-rebuild": "^1.11.0",
    "eslint": "7.x",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "5.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "4.x",
    "fork-ts-checker-webpack-plugin": "^4.1.6",
    "jest": "^26.0.1",
    "node-loader": "^0.6.0",
    "prettier": "^2.0.5",
    "react-treebeard": "^3.2.4",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "url-loader": "^4.1.0"
  },
  "productName": "blauncher-app"
}
